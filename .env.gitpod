# AI Trading Platform - Gitpod Environment Variables
# This file contains Gitpod-specific configuration

# Development Environment
NODE_ENV=development
ENVIRONMENT=gitpod
DEBUG=true

# Python Configuration
PYTHONPATH=/workspace/AI_Trading_Platform/backend
PYTHONUNBUFFERED=1

# WebSocket Configuration (Dynamic URLs for Gitpod)
# These will be set automatically by Gitpod
WS_HOST=0.0.0.0
WS_PORT=8765

# Frontend Configuration
REACT_APP_ENV=gitpod
REACT_APP_API_URL=https://8000-${GITPOD_WORKSPACE_ID}.${GITPOD_WORKSPACE_CLUSTER_HOST}
REACT_APP_WS_URL=wss://8765-${GITPOD_WORKSPACE_ID}.${GITPOD_WORKSPACE_CLUSTER_HOST}

# Backend API Configuration
API_HOST=0.0.0.0
API_PORT=8000
CORS_ORIGINS=https://3000-${GITPOD_WORKSPACE_ID}.${GITPOD_WORKSPACE_CLUSTER_HOST}

# Database Configuration (Mock for development)
DATABASE_URL=sqlite:///./ai_trading_dev.db
REDIS_URL=redis://localhost:6379

# Security (Development only - change in production)
SECRET_KEY=gitpod-development-secret-key-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# MT5 Configuration (Mock mode for Gitpod)
MT5_SERVER=demo-server
MT5_LOGIN=demo-login
MT5_PASSWORD=demo-password
MT5_MOCK_MODE=true

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/app.log
LOG_MAX_SIZE=10485760
LOG_BACKUP_COUNT=5

# Email Configuration (Disabled for development)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
EMAIL_ENABLED=false

# Stripe Configuration (Disabled for development)
STRIPE_SECRET_KEY=
STRIPE_PUBLISHABLE_KEY=
STRIPE_WEBHOOK_SECRET=
PAYMENTS_ENABLED=false

# Feature Flags for Gitpod
ENABLE_REAL_TRADING=false
ENABLE_MOCK_DATA=true
ENABLE_WEBSOCKET_LOGGING=true
ENABLE_FRONTEND_LOGGING=true

# Gitpod Specific Settings
GITPOD_WORKSPACE_ID=${GITPOD_WORKSPACE_ID}
GITPOD_WORKSPACE_URL=${GITPOD_WORKSPACE_URL}
GITPOD_WORKSPACE_CLUSTER_HOST=${GITPOD_WORKSPACE_CLUSTER_HOST}

# Port Configuration
PORT=8000
FRONTEND_PORT=3000
WEBSOCKET_PORT=8765

# Development Tools
HOT_RELOAD=true
AUTO_RESTART=true
WATCH_FILES=true