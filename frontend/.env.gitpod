# AI Trading Platform Frontend - Gitpod Environment Variables

# Development Environment
NODE_ENV=development
REACT_APP_ENV=gitpod

# API Configuration for Gitpod
REACT_APP_API_URL=https://8000-${GITPOD_WORKSPACE_ID}.${GITPOD_WORKSPACE_CLUSTER_HOST}
REACT_APP_WS_URL=wss://8765-${GITPOD_WORKSPACE_ID}.${GITPOD_WORKSPACE_CLUSTER_HOST}

# WebSocket Configuration
REACT_APP_WS_RECONNECT_ATTEMPTS=5
REACT_APP_WS_RECONNECT_INTERVAL=3000
REACT_APP_WS_TIMEOUT=10000

# Feature Flags
REACT_APP_ENABLE_MOCK_DATA=true
REACT_APP_ENABLE_REAL_TRADING=false
REACT_APP_ENABLE_NOTIFICATIONS=true
REACT_APP_ENABLE_SOUND=true

# Development Settings
REACT_APP_DEBUG=true
REACT_APP_LOG_LEVEL=info
GENERATE_SOURCEMAP=true
FAST_REFRESH=true

# Gitpod Workspace Information
REACT_APP_GITPOD_WORKSPACE_ID=${GITPOD_WORKSPACE_ID}
REACT_APP_GITPOD_WORKSPACE_URL=${GITPOD_WORKSPACE_URL}

# CORS Settings (handled by Gitpod)
REACT_APP_CORS_ENABLED=true

# Performance Settings
REACT_APP_CHART_UPDATE_INTERVAL=1000
REACT_APP_PRICE_UPDATE_INTERVAL=500
REACT_APP_SIGNAL_UPDATE_INTERVAL=2000

# UI Settings
REACT_APP_THEME=light
REACT_APP_LANGUAGE=en
REACT_APP_TIMEZONE=UTC

# Development Tools
REACT_APP_REDUX_DEVTOOLS=true
REACT_APP_REACT_DEVTOOLS=true